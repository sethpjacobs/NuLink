<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>net6.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <PackAsTool>true</PackAsTool>
        <ToolCommmandName>nulink</ToolCommmandName>
        <PackageOutputPath>./nupkg</PackageOutputPath>
        <RootNamespace>NuLink</RootNamespace>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="System.CommandLine.Experimental" Version="0.2.0-alpha.19174.3" />
        <PackageReference Include="Buildalyzer" Version="4.1.4" />
        <PackageReference Include="Murphy.SymbolicLink" Version="1.0.0" />
    </ItemGroup>
</Project>
